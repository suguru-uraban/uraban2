{
    "atom": {
        "rewriteTsconfig": true
    },
    "compilerOptions": {
        "module": "amd",
        "outFile": "bundle.js",
        "noImplicitAny": true,
        "removeComments": true,
        "target": "es5",
        "jsx": "react"
    },
    "filesGlob": [
        "node_modules/@types/**/*.d.ts",
        "src/ts/**/*.tsx"
    ],
    "files": [
        "node_modules/@types/node/index.d.ts",
        "node_modules/@types/react-dom/index.d.ts",
        "node_modules/@types/react-dom/server.d.ts",
        "node_modules/@types/react/index.d.ts",
        "node_modules/@types/superagent/index.d.ts",
        "src/ts/app.tsx",
        "src/ts/component/cover.tsx",
        "src/ts/component/header.tsx",
        "src/ts/component/mainBody.tsx",
        "src/ts/component/main/navMenu.tsx"
    ]
}
